@page
@model BlogWebapp.Pages.Blogs.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Blog</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Blog.Url)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Blog.Url)
        </dd>
          <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Blog.Posts)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Title</th>
                    <th>Content</th>
                    <th></th>
                </tr>
                @foreach (var item in Model.Blog.Posts)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Content)
                        </td>
                        <td>
                           <a asp-page="../BlogPosts/Edit" asp-route-id="@item.PostId">Edit</a>
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Blog.BlogId">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
