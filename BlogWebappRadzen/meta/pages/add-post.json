{
  "components": [
    {
      "type": "content",
      "container": "main",
      "components": [
        {
          "type": "row",
          "components": [
            {
              "type": "col",
              "class": "col-md-12",
              "components": [
                {
                  "type": "template-form",
                  "name": "form0",
                  "components": [
                    {
                      "type": "row",
                      "style": {
                        "marginBottom": "1rem"
                      },
                      "components": [
                        {
                          "type": "col",
                          "class": "col-md-3",
                          "components": [
                            {
                              "type": "label",
                              "text": "Title",
                              "component": "Title",
                              "name": "TitleLabel",
                              "style": {
                                "width": "100%"
                              }
                            }
                          ]
                        },
                        {
                          "type": "col",
                          "class": "col-md-9",
                          "components": [
                            {
                              "valueType": "string",
                              "type": "textbox",
                              "name": "Title",
                              "style": {
                                "width": "100%"
                              },
                              "value": "${post.Title}"
                            }
                          ]
                        }
                      ]
                    },
                    {
                      "type": "row",
                      "style": {
                        "marginBottom": "1rem"
                      },
                      "components": [
                        {
                          "type": "col",
                          "class": "col-md-3",
                          "components": [
                            {
                              "type": "label",
                              "text": "Content",
                              "component": "Content",
                              "name": "ContentLabel",
                              "style": {
                                "width": "100%"
                              }
                            }
                          ]
                        },
                        {
                          "type": "col",
                          "class": "col-md-9",
                          "components": [
                            {
                              "valueType": "string",
                              "type": "textbox",
                              "name": "Content",
                              "style": {
                                "width": "100%"
                              },
                              "value": "${post.Content}"
                            }
                          ]
                        }
                      ]
                    },
                    {
                      "type": "row",
                      "style": {
                        "marginBottom": "1rem"
                      },
                      "components": [
                        {
                          "type": "col",
                          "class": "col-md-3",
                          "components": [
                            {
                              "type": "label",
                              "text": "Blog",
                              "component": "BlogId",
                              "name": "BlogIdLabel",
                              "style": {
                                "width": "100%"
                              }
                            }
                          ]
                        },
                        {
                          "type": "col",
                          "class": "col-md-9",
                          "components": [
                            {
                              "data": "${getBlogsForBlogIdResult}",
                              "textProperty": "Url",
                              "valueProperty": "BlogId",
                              "placeholder": "Choose Blog",
                              "valueType": "int?",
                              "showSearch": false,
                              "count": "${getBlogsForBlogIdCount}",
                              "type": "dropdown-datagrid",
                              "name": "BlogId",
                              "style": {
                                "width": "100%"
                              },
                              "events": {
                                "loadData": [
                                  {
                                    "name": "Blogging.getBlogs",
                                    "parameters": [
                                      {
                                        "name": "$top",
                                        "value": "${event.top}"
                                      },
                                      {
                                        "name": "$skip",
                                        "value": "${event.skip}"
                                      },
                                      {
                                        "name": "$orderby",
                                        "value": "${event.orderby}"
                                      },
                                      {
                                        "name": "$filter",
                                        "value": "${event.filter}"
                                      },
                                      {
                                        "name": "$count",
                                        "value": "true"
                                      }
                                    ],
                                    "then": [
                                      {
                                        "name": "getBlogsForBlogIdResult",
                                        "type": "set",
                                        "value": "${result.Value.AsODataEnumerable()}",
                                        "valueType": "IEnumerable<BlogWebappRadzen.Models.Blogging.Blog>"
                                      },
                                      {
                                        "name": "getBlogsForBlogIdCount",
                                        "type": "set",
                                        "value": "result.Count"
                                      }
                                    ],
                                    "type": "invoke"
                                  }
                                ]
                              },
                              "value": "${post.BlogId}"
                            }
                          ]
                        }
                      ]
                    },
                    {
                      "type": "row",
                      "components": [
                        {
                          "type": "col",
                          "class": "col offset-sm-3",
                          "components": [
                            {
                              "type": "button",
                              "buttonType": "submit",
                              "icon": "save",
                              "text": "Save",
                              "buttonStyle": "primary"
                            },
                            {
                              "type": "button",
                              "buttonStyle": "light",
                              "style": {
                                "marginLeft": "1rem"
                              },
                              "text": "Cancel",
                              "events": {
                                "click": [
                                  {
                                    "type": "close-popup"
                                  }
                                ]
                              }
                            }
                          ]
                        }
                      ]
                    }
                  ],
                  "events": {
                    "submit": [
                      {
                        "error": [
                          {
                            "detail": "Unable to create new Post!",
                            "severity": "error",
                            "summary": "Error",
                            "type": "notify"
                          }
                        ],
                        "name": "Blogging.createPost",
                        "parameters": [
                          {
                            "name": "Post",
                            "value": "${post}"
                          }
                        ],
                        "then": [
                          {
                            "type": "close-popup",
                            "result": "${post}"
                          }
                        ],
                        "type": "invoke"
                      }
                    ]
                  },
                  "data": "${post}",
                  "visible": "${post != null}",
                  "itemType": "BlogWebappRadzen.Models.Blogging.Post"
                }
              ]
            }
          ]
        }
      ]
    }
  ],
  "events": {
    "load": [
      {
        "name": "post",
        "type": "set",
        "value": "new BlogWebappRadzen.Models.Blogging.Post(){}",
        "valueType": "BlogWebappRadzen.Models.Blogging.Post"
      }
    ]
  },
  "name": "Add Post",
  "layout": "Main"
}